<h1>New user:</h1>
<%= form_for @user do |f| %>

  User name <%= f.text_field :name, :value => "Username test" %><br>
  Email <%= f.text_field :email, placeholder: "email@host.com" %><br>
  Password <%= f.password_field :password, placeholder: "password" %><br>
  
  <%= f.submit "Submit" %>
<% end %>

<%= "Errors:" if @user.errors.any? %>
<ul>
  <% @user.errors.full_messages.each do |error| %>
  <li><%= error %></li>
  <% end %>
</ul>


